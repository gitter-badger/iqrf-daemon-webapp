{block content}
<h1 n:block=title>{_"Gateway Info"}</h1>
<div class='panel panel-default'>
	<div class='panel-body'>
		<table class='table table-striped'>
			<tr>
				<th>{_"IQRF Daemon version"}</th>
				<td>{$daemonVersion}</td>
			</tr>
			<tr>
				<th>{_"Hostname"}</th>
				<td>{$hostname}</td>
			</tr>
			<tr>
				<th>{_"IP addresses"}</th>
				<td>
					{foreach $ipAddresses as $interface => $addresses}
						<strong>{$interface}:</strong>
						{foreach $addresses as $ipAddress}
							{$ipAddress}{sep}, {/sep}
						{/foreach}
						{sep}<br>{/sep}
					{/foreach}
				</td>
			</tr>
			<tr>
				<th>{_"MAC addresses"}</th>
				<td>
					{foreach $macAddresses as $interface => $macAddress}
						<strong>{$interface}:</strong> {$macAddress}{sep}<br>{/sep}
					{/foreach}
				</td>
			</tr>
			<tr>
				<th>{_"TR info"}</th>
				<td>
					<strong>{_"Module type:"}</strong> {$module['TrType']}<br>
					<strong>{_"MCU type:"}</strong> {$module['McuType']}<br>
					<strong>{_"MID:"}</strong> {$module['ModuleId']}<br>
					<strong>{_"OS:"}</strong> {$module['OsVersion']} ({$module['OsBuild']})<br>
					<strong>{_"Supply Voltage:"}</strong> {$module['SupplyVoltage']}
				</td>
			</tr>
		</table>
		<a class="btn btn-success" n:href="Log:default" role="button">Show IQRF Daemon log</a>
	</div>
</div>
